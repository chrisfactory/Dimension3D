<Application x:Class="Dimension3D.Samples.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dimension3D.Samples"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DiffuseMaterial x:Key="defaultMaterial" Brush="Gray"/>
        <DiffuseMaterial x:Key="defaultPressed" Brush="LightBlue"/>

        <Style x:Key="HearthButtonStyle" TargetType="{x:Type DimensionButton3D}">
            <Style.Setters>
                <Setter Property="Model">
                    <Setter.Value>
                        <DimensionGeometryBox Material="{StaticResource defaultMaterial}"/>
                    </Setter.Value>
                </Setter> 
            </Style.Setters> 
        </Style>
    </Application.Resources>
</Application>
